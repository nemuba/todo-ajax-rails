$('turbolinks:load').ready(function() {
  <% if @todo.errors.any? %>
    Alert.add("<%= t('messages.todo.not_destroyed') %>")
  <% else %>
    const id = "<%= @todo.id %>";
    const title = "<%= translate_model(Todo) %>";
    const message = "<%= t('messages.todo.destroyed') %>";
    App.Todo.remove(Number(id));
    App.Toast.add(title, message);
  <% end %>
});

