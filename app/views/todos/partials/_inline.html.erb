<%= form_with(model: todo, remote: true, html: {id: "todo"} ) do |form| %>
  <% if field == 'status' %>
    <%= form.select field, options_for_select(Todo.statuses.map { |k, _| [translate_enum(Todo, :status, k), k] }), { include_blank: 'Selecione' }, class: 'form-control', onchange: "this.form.requestSubmit()" %>
  <% else %>
    <%= form.text_field field, class: 'form-control', placeholder: "Search..." %>
  <% end %>
<% end %>
