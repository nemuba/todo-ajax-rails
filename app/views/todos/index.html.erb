<%= todo_partials 'modal' %>


<h1><%= translate_model(Todo) %></h1>

<table class="table table-relative">
  <thead>
    <tr>
      <th><%= translate_attribute(Todo, :title) %></th>
      <th><%= translate_attribute(Todo, :description) %></th>
      <th><%= translate_attribute(Todo, :status) %></th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <%= todo_partials 'todo', collection: @todos %>
  </tbody>
</table>

<%= link_new(new_todo_path) %>

<script type="text/javascript">
  $('turbolinks:load').ready(function() {
    App.Todo.index("<%= notice %>");
  });
</script>
